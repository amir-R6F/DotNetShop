@page
@model ServiceHost.Areas.Administrator.Pages.Blogs.ArticleCategories.Index
@{
    Layout = "_Admin_Layout";
    ViewData["title"] = "مدیریت محصولات";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد دسته بندی جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در دسته بندی ها</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Name"></label>
                        <input class="form-control" asp-for="SearchModel.Name">
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست دسته بندی ها (@Model.articleCategories.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>تصویر</th>
                                <th>نام</th>
                                <th>ترتیب</th>
                                <th>توضیحات</th>
                                <th>عملایت</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var category in Model.articleCategories)
                            {
                                <tr>
                                    <td>@category.Id</td>
                                    <td>
                                        <img src="~/productCategories/@category.Picture" style="height: 70px; width: 70px;"/>
                                    </td>
                                    <td>@category.Name</td>
                                    <td>@category.ShowOrder</td>
                                    <td>@category.Description</td>
                                    <td>
                                        <a class="btn btn-warning waves-effect waves-light m-b-5"
                                           href="#showmodal=@Url.Page("./index", "Edit", new { Id = category.Id })">
                                            <i class="fa fa-edit"></i> ویرایش
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#datatable').dataTable();
        });
    </script>
}