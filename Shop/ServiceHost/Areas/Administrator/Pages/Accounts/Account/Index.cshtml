@page
@model ServiceHost.Areas.Administrator.Pages.Accounts.Account.Index
@{
    Layout = "_Admin_Layout";
    ViewData["title"] = "مدیریت محصولات";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد کاربر جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در کاربران</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Fullname"></label>
                        <input class="form-control" asp-for="SearchModel.Fullname" placeholder="نام و نام خانوادگی">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Username"></label>
                        <input class="form-control" asp-for="SearchModel.Username" placeholder="نام کاربری">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Mobile"></label>
                        <input class="form-control" asp-for="SearchModel.Mobile" placeholder="شماره تلفن">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.RoleId"></label>
                        <select class="form-control" asp-for="SearchModel.RoleId" asp-items="Model.roles">
                            <option value="0">نقش کاربر ...</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست کاربران (@Model.accounts.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>عکس</th>
                                <th>نام</th>
                                <th>نام کاربری</th>
                                <th>نقش</th>
                                <th>تاریخ تولید</th>
                                <th>عملیات</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var account in Model.accounts)
                            {
                                <tr>
                                    <td>@account.Id</td>
                                    <td>
                                        <img src="~/productCategories/@account.ProfilePhoto" style="height: 70px; width: 70px;"/>
                                    </td>
                                    <td>@account.Fullname</td>
                                    <td>@account.Username</td>
                                    <td>@account.RoleName</td>
                                    <td>@account.CreationDate</td>
                                    <td>
                                        <a class="btn btn-warning waves-effect waves-light m-b-5"
                                           href="#showmodal=@Url.Page("./index", "Edit", new { Id = account.Id })">
                                            <i class="fa fa-edit"></i> ویرایش
                                        </a>
                                        <a class="btn btn-info waves-effect waves-light m-b-5"
                                           href="#showmodal=@Url.Page("./index", "ChangePassword", new { Id = account.Id })">
                                            <i class="fa fa-edit"></i> تغییر رمز
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#datatable').dataTable();
        });
    </script>
}